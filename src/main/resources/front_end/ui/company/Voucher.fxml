                   onKeyReleased="#txt_amount_onKeyReleased" prefHeight="30.0" prefWidth="200.0"
                   promptText="Enter Amount" style="-fx-border-radius: 2;">
            <font>
                <Font size="14.0"/>
            </font>
        </TextField>
        <TextField fx:id="txt_cheque" alignment="CENTER" layoutX="280.0" layoutY="410.0" onAction="#txt_cheque_onAction"
