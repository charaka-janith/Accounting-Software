                 style="-fx-border-radius: 2;">
          <font>
              <Font size="14.0"/>
          </font>
      </TextField>
      <Label fx:id="lbl_date" layoutX="50.0" layoutY="140.0" prefHeight="25.0" text="Date" textFill="#999999">
